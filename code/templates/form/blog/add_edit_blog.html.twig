{% block _blog_title_row %}
    <div class="row mt-2">
        {{ form_label(form, 'Title', {label_attr: {class: 'form-label'}}) }}
        <div class="">
            {{ form_widget(form, {attr: {class: 'form-control'}}) }}
            {{ form_help(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock _blog_title_row %}

{% block _blog_title_help %}
    {{ block('show_help_text') }}
{% endblock _blog_title_help %}

{% block _blog_content_help %}
    {{ block('show_help_text') }}
{% endblock _blog_content_help %}

{% block _blog_content_row %}
    <div class="row mt-2">
        {{ form_label(form, 'Content', {label_attr: {class: 'form-label'}}) }}
        <div class="">
            {{ form_widget(form, {attr: {class: 'form-control'}}) }}
            {{ form_help(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{% endblock _blog_content_row %}

{% block form_errors %}
    {% if errors | length > 0 %}
        <div>
            {% for error in errors %}
                <p class="text-danger">{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock form_errors %}

{# create a reusable block to avoid DRY violation #}
{% block show_help_text %}
<small class="form-text text-muted">
    {{ help }}
</small>
{% endblock %}