{% extends 'layout.html.twig' %}
{% block title %}Hello BlogController!{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}
            {{ form_row(form) }}
            <button class="btn btn-primary mt-4">
                Charger les blogs
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}